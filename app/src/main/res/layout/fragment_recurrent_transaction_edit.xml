<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="From Fund"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/textFromFundTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <Spinner
            android:id="@+id/spinnerFromFundSelection"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textFromFundTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" android:spinnerMode="dropdown"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/spinnerToFundSelection"/>
    <TextView
            android:text="To Fund"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/textToFundTitle"
            app:layout_constraintTop_toBottomOf="@+id/textFromFundTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"/>
    <Spinner
            android:id="@+id/spinnerToFundSelection"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerFromFundSelection"
            app:layout_constraintStart_toEndOf="@+id/textToFundTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginTop="12dp"/>

    <EditText
            android:text="Fund Flow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textFundFlowValue"
            app:layout_constraintTop_toBottomOf="@+id/spinnerToFundSelection"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:inputType="text" android:autofillHints="" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <EditText
            android:text="From Date"
            android:inputType="date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textFromDate"
            app:layout_constraintTop_toBottomOf="@+id/textFundFlowValue"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <EditText
            android:text="From Time"
            android:inputType="time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textFromTime"
            app:layout_constraintTop_toBottomOf="@+id/textFromDate"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <EditText
            android:text="To Date"
            android:inputType="date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textToDate"
            app:layout_constraintTop_toBottomOf="@+id/textFromTime"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <EditText
            android:text="To Time"
            android:inputType="date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textToTime"
            app:layout_constraintTop_toBottomOf="@+id/textToDate"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>